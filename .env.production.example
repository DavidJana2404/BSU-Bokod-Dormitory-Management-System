# Render.com Production Environment Configuration
# Copy these settings to your Render environment variables

# Application
APP_NAME="DMS - Dormitory Management System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Manila
APP_URL=https://your-app-name.onrender.com
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Render Optimizations
DEPLOYMENT_PLATFORM=render
RENDER_MAX_EXECUTION_TIME=60
RENDER_MEMORY_LIMIT=512M
RENDER_DB_TIMEOUT=60
RENDER_CACHE_TTL=300
RENDER_EAGER_LOADING=true
RENDER_GZIP=true

# Database (PostgreSQL on Render)
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
DATABASE_URL=
DB_SSL_MODE=require
DB_PERSISTENT=false
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_CONNECT_TIMEOUT=60
DB_READ_TIMEOUT=60
DB_WRITE_TIMEOUT=60

# Cache & Session
CACHE_DRIVER=file
CACHE_FILE_LOCKING=true
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Security
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000,::1,your-app-name.onrender.com
SPA_URL=https://your-app-name.onrender.com

# Logging
LOG_CHANNEL=single
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info
RENDER_LOG_502_ERRORS=true

# Mail (configure with your preferred service)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@your-app.com"
MAIL_FROM_NAME="${APP_NAME}"

# Queue
QUEUE_CONNECTION=database

# File Storage
FILESYSTEM_DISK=local

# Broadcasting (optional)
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite (for asset compilation)
VITE_APP_NAME="${APP_NAME}"

# Performance Settings
CACHE_PREFIX=dms_prod
VIEW_COMPILED_PATH=/tmp/views
ROUTE_CACHE_PATH=/tmp/routes.php
CONFIG_CACHE_PATH=/tmp/config.php